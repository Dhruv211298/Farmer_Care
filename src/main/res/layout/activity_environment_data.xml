<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shahdhruv.farmercare.environmentData">

    <LinearLayout
        android:id="@+id/humidity_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="5dp"
        android:orientation="horizontal"
        android:background="@drawable/square_layout">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_humidity"
            android:background="@drawable/square_layout"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/humidity"
            android:textSize="25dp"
            android:background="@drawable/square_layout"/>

        <TextView
            android:id="@+id/data_humidity"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:textSize="25dp"
            tools:text="@string/humidity"
            android:background="@drawable/square_layout"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/humidity_layout"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="5dp"
        android:orientation="horizontal"
        android:background="@drawable/square_layout">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_thermometer"
            android:background="@drawable/square_layout"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/square_layout"
            android:gravity="center"
            android:text="@string/temperature"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/data_temperature"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:textSize="25dp"
            tools:text="@string/temperature"
            android:background="@drawable/square_layout"/>

    </LinearLayout>
</RelativeLayout>